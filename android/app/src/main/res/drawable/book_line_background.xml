<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Book page background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAF8F3" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <!-- Notebook lines -->
    <item android:bottom="24dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#E8E0D0"
                android:dashWidth="20dp"
                android:dashGap="2dp" />
        </shape>
    </item>

    <!-- Red margin line -->
    <item android:left="16dp" android:right="100dp">
        <shape android:shape="rectangle">
            <solid android:color="#E8B4B4" />
        </shape>
    </item>

</layer-list>